<Window x:Class="NapierBankMessageFilter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBankMessageFilter"
        mc:Ignorable="d"
        Title="Napier Bank Messager" Height="450" Width="800">
    <Grid>
        <Label Content="Message Type" HorizontalAlignment="Left" Margin="37,64,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMsgID" HorizontalAlignment="Left" Margin="37,90,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MaxLength="10" TextChanged="txtMsgID_TextChanged"/>
        <Label Content="Message Body" HorizontalAlignment="Left" Margin="37,113,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMsgBody" HorizontalAlignment="Left" Margin="37,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Height="102" IsEnabled="False"/>
        <Button Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="660,345,0,0" VerticalAlignment="Top" Height="38" Width="94" IsEnabled="False" Click="btnSubmit_Click"/>
    </Grid>
</Window>
